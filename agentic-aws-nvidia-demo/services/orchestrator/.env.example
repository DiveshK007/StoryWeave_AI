# StoryWeave AI - Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Database
DATABASE_URL=sqlite:///./stories.db

# AI/LLM (Optional - uses mock mode if not set)
NIM_API_KEY=your_nim_api_key
NIM_API_URL=https://integrate.api.nvidia.com/v1

# Sentry (Optional)
SENTRY_DSN=your_sentry_dsn
SENTRY_RELEASE=1.0.0
ENVIRONMENT=development

# Mixpanel (Optional)
MIXPANEL_TOKEN=your_mixpanel_token
MIXPANEL_API_SECRET=your_api_secret
APP_VERSION=1.0.0

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Vector Store
INDEX_DIR=./indices
CHUNK_SIZE=500
CHUNK_OVERLAP=50
